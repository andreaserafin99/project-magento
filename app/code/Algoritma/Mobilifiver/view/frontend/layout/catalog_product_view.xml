<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
        </referenceContainer>

        <referenceContainer name="product.info.media" >
            <block class="Magento\Catalog\Block\Product\View\Gallery" name="product.info.media.image" template="Algoritma_Mobilifiver::product/view/gallery.phtml">
                <arguments>
                    <argument name="gallery_options" xsi:type="object">Magento\Catalog\Block\Product\View\GalleryOptions</argument>
                    <argument name="imageHelper" xsi:type="object">Magento\Catalog\Helper\Image</argument>
                    <argument name="imageProps" xsi:type="object">Algoritma\Mobilifiver\ViewModel\ImageProperties</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
